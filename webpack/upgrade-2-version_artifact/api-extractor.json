{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

  // 엔트리용 d.ts 파일 위치
  "mainEntryPointFilePath": "<projectFolder>/dist/type-temp/index.d.ts",

  "bundledPackages": [],

  "compiler": {},

  // 추출 시 변경 사항을 스냅샷으로 저장
  "apiReport": {
    "enabled": false
    // ,
    // "reportFolder": "<projectFolder>/etc/"
  },

  // 문서 추출용 파일 생성
  "docModel": {
    "enabled": false,
    "apiJsonFilePath": "<projectFolder>/docs/docs/api-extract/<unscopedPackageName>.api.json"
  },

  // dts 번들링(롤업)할 파일명
  "dtsRollup": {
    "enabled": true,
    // 언트림 파일은 나오지 않게 처리
    "untrimmedFilePath": "",
    // 주요 배포용으로 트림 파일을 사용
    // "publicTrimmedFilePath": "<projectFolder>/dist/<unscopedPackageName>-public.d.ts"
    "publicTrimmedFilePath": "<projectFolder>/dist/index.d.ts"
  },

  "tsdocMetadata": {
    "enabled": false
  },
  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },

    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },

    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    }
  }
}
